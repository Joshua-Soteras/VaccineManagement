@model Patient


<a class="btn btn-primary" asp-area="" asp-controller="Patients" asp-action="PatientsIndex">
    Back to Patients Index
</a>

<h1>Recieve Second Dose </h1>

<form method="post">

    <div>
        <p>Patient Name : @Model.PatientName</p>
        <p> @ViewBag.time</p>
    </div>

    <div class="form-group">
        <label asp-for="SecondDose"> Second Dose</label>
        <input asp-for="SecondDose" class="form-control" value =@ViewBag.time>
        <span asp-validation-for="SecondDose" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary"> Save </button>

</form>
