@model List<Vaccine>

<a class="btn btn-primary" asp-area="" asp-controller="Vaccines" asp-action="AddVaccine">
    Add New Vaccine
</a>
| 
<a class="btn btn-primary" asp-area="" asp-controller="Vaccines" asp-action="NewDoses">
    New Doses 
</a>

<table class="table">
    <thead> 
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Doses Required</th>
            <th>Doses In Between</th>
            <th>Doses Recieved</th>
            <th>Total Doses Left </th>
            <th>Edit Vaccine</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var vaccine in Model)
        {
            <tr>
                <td>@vaccine.Id</td>

                <td>@vaccine.Name</td>

                <td>@vaccine.DosesRequired</td>


                @if(vaccine.DosesInBetween > 0){
                    <td>@vaccine.DosesInBetween </td>
                }
                else
                {
                    <td> </td>
                }

                <td>@vaccine.DosesRecieved</td>

                <td>@vaccine.TotalDosesLeft</td>
                
                <td>
                    <a asp-controller="Vaccines" asp-action="Edit" asp-route-id="@vaccine.Id">
                      Edit
                    </a>
                </td>

            </tr>
        }
    </tbody>
</table>

